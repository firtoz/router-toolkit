{
	"name": "@firtoz/drizzle-sqlite-wasm",
	"version": "0.0.0",
	"description": "Drizzle SQLite WASM bindings",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"require": "./src/index.ts"
		},
		"./schema": {
			"types": "./src/collections/drizzle-collection.ts",
			"import": "./src/collections/drizzle-collection.ts",
			"require": "./src/collections/drizzle-collection.ts"
		},
		"./drizzle-sqlite-wasm-worker": {
			"types": "./src/drizzle/worker.ts",
			"import": "./src/drizzle/worker.ts",
			"require": "./src/drizzle/worker.ts"
		},
		"./sqlite-wasm-migrator": {
			"types": "./src/migration/migrator.ts",
			"import": "./src/migration/migrator.ts",
			"require": "./src/migration/migrator.ts"
		},
		"./drizzleCollectionOptions": {
			"types": "./src/collections/drizzle-collection.ts",
			"import": "./src/collections/drizzle-collection.ts",
			"require": "./src/collections/drizzle-collection.ts"
		},
		"./*": {
			"types": "./src/*.ts",
			"import": "./src/*.ts",
			"require": "./src/*.ts"
		}
	},
	"files": [
		"src/**/*.ts",
		"!src/**/*.test.ts",
		"README.md",
		"CHANGELOG.md"
	],
	"scripts": {
		"typecheck": "tsc --noEmit -p ./tsconfig.json",
		"lint": "biome check --write src",
		"lint:ci": "biome ci src",
		"format": "biome format src --write",
		"test": "bun test --pass-with-no-tests",
		"test:watch": "bun test --watch"
	},
	"keywords": [
		"typescript",
		"sqlite",
		"wasm",
		"drizzle"
	],
	"author": "Firtina Ozbalikchi <firtoz@github.com>",
	"license": "MIT",
	"homepage": "https://github.com/firtoz/fullstack-toolkit#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/firtoz/fullstack-toolkit.git",
		"directory": "packages/drizzle-sqlite-wasm"
	},
	"bugs": {
		"url": "https://github.com/firtoz/fullstack-toolkit/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@firtoz/maybe-error": "workspace:*",
		"@firtoz/worker-helper": "workspace:*",
		"@sqlite.org/sqlite-wasm": "catalog:",
		"@tanstack/db": "catalog:",
		"drizzle-orm": "catalog:",
		"drizzle-zod": "^0.8.3",
		"react": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@standard-schema/spec": "^1.0.0",
		"@types/react": "catalog:"
	}
}
