{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "WebWorker"],
		"types": ["bun-types"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@firtoz/maybe-error": ["./packages/maybe-error/src"],
			"@firtoz/router-toolkit": ["./packages/router-toolkit/src"]
		}
	},
	"include": [
		"packages/*/src/**/*",
		"scripts/**/*",
		"packages/worker-helper/tests/test-worker-async.worker.ts",
		"packages/worker-helper/tests/test-worker-invalid-output.worker.ts",
		"packages/worker-helper/tests/test-worker.worker.ts",
		"packages/worker-helper/tests/worker-helper.test.ts",
		"packages/worker-helper/tests/WorkerClient.test.ts"
	],
	"exclude": ["node_modules"]
}
